<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="internal_requisition_employee_form_view" model="ir.ui.view">
            <field name="name">hr.employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='hr_settings']" position="after">
                     <page name="ir_settings" string="Requisition Settings">
                        <group>
                            <group>
                                <field name="desti_loca_id"/>
                            </group>
                        </group>
                     </page>
                </xpath>
            </field>
        </record>
        
        <record id="internal_requisition_department_form_view" model="ir.ui.view">
            <field name="name">hr.department.form.view</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="desti_loca_id"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
